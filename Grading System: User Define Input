
// Grading System: User Define Input

Grade A for 90% and above

Grade B for 80% to 89%

Grade C for 70% to 79%

Grade D for 60% to 69%

Grade F for below 60%

#include <stdio.h>

int main() {

int percentage;

// Input: Ask the user to enter the percentage

printf("Enter the percentage: ");

scanf("%d", &percentage);

// Decision control using else-if ladder

if (percentage >= 90) {

printf("Grade: A\n"); // Grade A for 90% and above

} else if (percentage >= 80) {

printf("Grade: B\n"); // Grade B for 80% to 89%

} else if (percentage >= 70) {

printf("Grade: C\n"); // Grade C for 70% to 79%

} else if (percentage >= 60) {

printf("Grade: D\n"); // Grade D for 60% to 69%

} else {

printf("Grade: F\n"); // Grade F for below 60%

}

return 0;
